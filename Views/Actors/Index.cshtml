@model IEnumerable<MovieTickets.Models.Actor>;

@{
    ViewData["Title"] = "All Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (ViewBag.SuccessNotification)
        {   
            <div id="actorCreatedSuccessAlert" class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratulations.</strong> Actor has been created successfully.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>            
        }
        <table class="table">
            <thead>                
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                    <th>
                        <div class="text-white">
                            <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i><strong>New Actor</strong>
                            </a>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="" src="@actor.ProfilePictureURL" alt="@actor.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => actor.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => actor.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@actor.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@actor.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@actor.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('actorCreatedSuccessAlert');
            if(output)
                $("#actorCreatedSuccessAlert").delay(3000).fadeOut(500);
        });

    </script>
}