@model IEnumerable<MovieTickets.Models.Cinema>
@{
    ViewData["Title"] = "All Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        @if (ViewBag.SuccessNotification)
        {
            <div id="cinemaCreatedSuccessAlert" class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratulations.</strong> Cinema has been @ViewBag.ActionOnModel successfully.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>            
        }
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.LogoURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@cinema.LogoURL" alt="@cinema.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => cinema.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => cinema.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@cinema.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@cinema.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete"  asp-route-id="@cinema.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

@section Scripts{
        <script>

            $(document).ready(function () {
            var output = document.getElementById('cinemaCreatedSuccessAlert');
                if (output)
                $("#cinemaCreatedSuccessAlert").delay(3000).fadeOut(500);
            });

        </script>
}