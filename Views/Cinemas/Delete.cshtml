@model Cinema;

@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h3>Are you sure you want to delete @Model.Name</h3>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info" id="LogoPreview" style="max-width:150px" />
                </div>
                <div class="form-group">
                    <label asp-for="LogoURL" class="control-label"></label>
                    <input asp-for="LogoURL" disabled class="form-control" />
                    
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" disabled class="form-control" />
                    
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" disabled class="form-control" />
                    
                </div>

                <div class="form-group">
                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id"/>                        
                        <input type="submit" style="margin-top:10px;" value="Confirm" class="btn btn-danger float-right"/>
                        <a style="margin-top: 10px" class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                    </form>                    
                </div>  
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#LogoURL").val();
        });
    </script>
}
